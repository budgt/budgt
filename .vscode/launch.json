{
  "version": "2.0.0",
  "configurations": [
    {
      "name": "ng serve",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200/",
      "runtimeExecutable": "/usr/bin/google-chrome-stable",
      "sourceMaps": true,
      "webRoot": "${workspaceFolder}/frontend",
      "breakOnLoad": true,
      "sourceMapPathOverrides": {
        "*": "${webRoot}/frontend/*"
      }
    },
    {
      "name": "ng test",
      "type": "chrome",
      "request": "attach",
      "url": "http://localhost:9876/debug.html",
      "sourceMaps": true,
      "webRoot": "${workspaceFolder}/frontend",
      "sourceMapPathOverrides": {
        "*": "${webRoot}/frontend/src/*"
      }
    }
  ]
}
